<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.app.board.BoardDAO">
	<select id="list" resultType="com.example.app.board.BoardDTO">
		SELECT * FROM board ORDER BY num DESC
	</select>

	<!-- 상세 정보 조회 -->
	<select id="detail" resultType="com.example.app.board.BoardDTO" parameterType="com.example.app.board.BoardDTO">
		SELECT * FROM board WHERE num=#{num}
	</select>   
	 
	<insert id="add" parameterType="com.example.app.board.BoardDTO">
		INSERT INTO board(title, writer, contents, date, hit) VALUES (#{title}, #{writer}, #{contents}, now(), 0)
	</insert>    
	
	<delete id="delete" parameterType="Long">
		DELETE FROM board WHERE num=#{num2}
	</delete>
	
	<update id="update" parameterType="java.util.Map" >
		UPDATE board SET title=#{t}, contents=#{c} WHERE num=#{n}
	</update>
</mapper>
