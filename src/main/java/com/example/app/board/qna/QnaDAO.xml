<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.board.qna.QnaDAO">
	<select id="list" parameterType="com.example.app.util.Pager" resultType="QnaDTO">
		SELECT * FROM qna ORDER BY board_num DESC LIMIT #{startNum}, #{perPage}
	</select>
	
	<select id="count">
		SELECT COUNT(board_num) FROM qna
	</select>
	
	<insert id="add" parameterType="QnaDTO">
		INSERT INTO qna VALUES(null, #{boardTitle}, #{boardWriter}, #{boardContents}, now(), 0, 0, 0, 0)
	</insert>
</mapper>